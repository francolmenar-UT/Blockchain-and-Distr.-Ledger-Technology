{
  "certificate": {
    // Each certificate should have a unique ID in the system
    "id": "1",
    "dateIssued": "dd/mm/yyyy",
    "dateExpired": "dd/mm/yyyy",
    // Type of the certificate
    // I thought about assigning to each field of study and ID
    // For example, Psychology = 1, Computer Science = 2, ...
    // In order to ease its later search and identification
    "type": "2",
    // Same as type, this could be used to differentiate between
    // 1 = Bachelor, 2 = Master, 3 = Phd, ...
    "level": "1",
    "certificateName": "Bachelor in Computer Science & Engineering",
    "issuerEntity": {
      // Global ID for an issuer entity in the blockchain network
      "entityId": "1",
      "name": "University of Twente",
      "country": "Netherlands"
    },
    "issuedEntity": {
      // Global ID for an student in the blockchain network, not its local student number
      "studentId": "1",
      "name": "Francisco Colmenar"
    }
  }
}